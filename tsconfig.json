{
  "ts-node": {
    "swc": true
  },
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "target": "es6",
    "lib": ["es2017", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "build"
  }
}
